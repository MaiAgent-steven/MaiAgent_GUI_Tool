<Window x:Class="MaiAgentValidator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="關於 MaiAgent 管理工具集" 
        Height="600" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="maiagent.ico">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題區域 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <!-- 應用程式圖標 -->
            <materialDesign:PackIcon Kind="Robot" 
                                   Width="64" Height="64" 
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
            
            <!-- 應用程式名稱 -->
            <TextBlock Text="MaiAgent 管理工具集" 
                      Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                      HorizontalAlignment="Center"
                      FontWeight="Bold"/>
            
            <!-- 版本資訊 -->
            <TextBlock Text="版本 4.2.6 - RAG 增強版" 
                      Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                      Margin="0,4,0,0"/>
            
            <!-- 建置日期 -->
            <TextBlock Text="建置日期：2025-01-27" 
                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                      Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 內容區域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 應用程式描述 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="應用程式描述" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap" 
                                  Style="{StaticResource MaterialDesignBody2TextBlock}">
                            MaiAgent 管理工具集是一個功能強大的圖形化應用程式，專為 MaiAgent AI 助理系統設計，提供全方位的管理和驗證功能。
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 核心功能 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="核心功能" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <StackPanel>
                            <TextBlock Text="• AI 助理回覆品質驗證" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• RAG 增強統計分析" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 批次驗證處理" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 詳細統計報告" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 智能重試機制" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 組織管理功能" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 知識庫管理" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 系統資訊 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="系統資訊" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="作業系統：" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Name="OsVersionLabel" Text="Windows" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text=".NET 版本：" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="DotNetVersionLabel" Text=".NET 6.0" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="框架：" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="WPF + Material Design" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="架構：" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="ArchitectureLabel" Text="x64" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="程序 ID：" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Name="ProcessIdLabel" Text="0" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 技術特點 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="技術特點" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <StackPanel>
                            <TextBlock Text="• 異步處理架構，高效能並發操作" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 智能錯誤處理和自動重試機制" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 網路連接優化和超時設定" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 跨平台適配和記憶體優化" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• API 限流控制和容錯能力" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 現代化 Material Design UI" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                            <TextBlock Text="• 依賴注入和服務架構" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 開發團隊 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="開發團隊" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="MaiAgent Team" 
                                  Style="{StaticResource MaterialDesignBody1TextBlock}"
                                  FontWeight="Medium"/>
                        
                        <TextBlock Text="專案維護者" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 版權聲明 -->
                <materialDesign:Card Padding="16">
                    <StackPanel>
                        <TextBlock Text="版權聲明" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap" 
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}">
                            Copyright © 2025 MaiAgent Team. 保留所有權利。
                            <LineBreak/>
                            本軟體採用 MIT 授權條款發布。
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- 按鈕區域 -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Name="CopyInfoButton" 
                   Content="複製系統資訊" 
                   Click="CopyInfoButton_Click"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="0,0,8,0"/>
            <Button Name="CloseButton" 
                   Content="關閉" 
                   Click="CloseButton_Click"
                   Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window> 