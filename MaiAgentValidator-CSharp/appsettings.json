{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ApiSettings": {
    "BaseUrl": "http://localhost:8000",
    "ApiKey": "",
    "Timeout": "00:05:00"
  },
  "ValidationSettings": {
    "SimilarityThreshold": 0.3,
    "MaxConcurrent": 5,
    "ApiDelay": 1.0,
    "MaxRetries": 3,
    "EnableQueryMetadata": false,
    "KnowledgeBaseId": "",
    "LabelId": "",
    "EnableContextCombination": true
  },
  "UI": {
    "Theme": "Light",
    "Language": "zh-TW",
    "WindowWidth": 1200,
    "WindowHeight": 800,
    "RememberWindowPosition": true
  },
  "Export": {
    "DefaultDirectory": "exports",
    "DefaultFormat": "xlsx",
    "IncludeTimestamp": true
  }
} 